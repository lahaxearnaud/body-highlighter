{
  "version": "3.0.0",
  "license": "MIT",
  "main": "dist/body-highlighter.cjs.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "vite build --watch",
    "build": "vite build",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "prepare": "husky install && npm run build",
    "release": "semantic-release"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "body-highlighter",
  "author": "alahaxe",
  "description": "Framework-agnostic library for highlighting muscles on a body model",
  "repository": {
    "type": "git",
    "url": "https://github.com/lahaxearnaud/body-highlighter"
  },
  "homepage": "https://github.com/lahaxearnaud/body-highlighter",
  "keywords": [
    "muscle",
    "muscles",
    "body",
    "model",
    "highlighter",
    "highlight",
    "color",
    "svg",
    "framework-agnostic",
    "fitness",
    "exercise",
    "workout"
  ],
  "module": "dist/body-highlighter.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/body-highlighter.esm.js",
      "require": "./dist/body-highlighter.cjs.js"
    }
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@vitest/coverage-v8": "4.0.8",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.4.2",
    "vitest": "^4.0.8"
  }
}
